<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fyb.tictactoe.MainActivity">

    <Button
        android:id="@+id/f1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5px"/>

    <Button
        android:id="@+id/f2"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/f1"
        android:layout_marginLeft="42dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/f3"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginRight="-8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/f4"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/f1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/f5"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/f2"
        app:layout_constraintLeft_toRightOf="@+id/f4"
        android:layout_marginLeft="42dp" />

    <Button
        android:id="@+id/f6"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/f3"
        app:layout_constraintLeft_toRightOf="@+id/f5"
        android:layout_marginLeft="42dp" />

    <Button
        android:id="@+id/f7"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/f8"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f5"
        app:layout_constraintLeft_toRightOf="@+id/f7"
        android:layout_marginLeft="42dp" />

    <Button
        android:id="@+id/f9"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/f8"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="173dp"
        android:layout_height="65dp"
        android:text="Click a button to start"
        android:textSize="20dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/f8"
        android:layout_marginLeft="119dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="411dp"
        tools:layout_editor_absoluteX="93dp" />


</android.support.constraint.ConstraintLayout>
