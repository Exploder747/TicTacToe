<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackColor"
    tools:context="com.example.fyb.tictactoe.MainActivity">

    <Button
        android:id="@+id/f1"
        android:layout_width="300px"
        android:layout_height="300px"
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/f2"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-7dp"
        app:layout_constraintLeft_toRightOf="@+id/f1"
        android:layout_marginLeft="34dp" />

    <Button
        android:id="@+id/f3"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/f2"
        android:layout_marginLeft="34dp" />

    <Button
        android:id="@+id/f4"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/f5"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f2"
        app:layout_constraintLeft_toRightOf="@+id/f4"
        android:layout_marginLeft="34dp" />

    <Button
        android:id="@+id/f6"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@+id/f5"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/f3" />

    <Button
        android:id="@+id/f7"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/f4"
        android:layout_marginLeft="-13dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/f8"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@+id/f7"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/f5" />

    <Button
        android:id="@+id/f9"
        android:layout_width="300px"
        android:layout_height="300px"
        android:text=""
        android:background="@color/ButtonColor"
        android:textColor="@color/TextColor"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@+id/f8"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/f6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="73dp"
        android:text="Click a button to start"
        android:textSize="25dp"
        android:textColor="@color/TextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="95dp" />


</android.support.constraint.ConstraintLayout>
